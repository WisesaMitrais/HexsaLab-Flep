<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_gradient_background"
    android:animateLayoutChanges="true"
    tools:context=".activity.SplashscreenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fleplogo"/>
            <com.lab.hexsa.flep.utility.FontSuissnord
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:textColor="@color/color1"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/intro_slider_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:visibility="gone">
            <android.support.v4.view.ViewPager
                android:id="@+id/intro_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/intro_slider_2"
        android:layout_width="250dp"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="175dp"
        android:background="@drawable/custom_gradient_line"
        android:orientation="vertical"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/intro_slider_3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/icon_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_circle_background">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_camera_white_24"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/icon_music"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_circle_background">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_audiotrack_white_24"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right">
            <LinearLayout
                android:id="@+id/icon_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_circle_background">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_play_arrow_white_24"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/intro_slider_4"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone">
        <com.lab.hexsa.flep.utility.FontQuicksandBold
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/splashscreen_1"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/color2"/>
        <com.lab.hexsa.flep.utility.FontQuicksandRegular
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/splashscreen_2"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/color2"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>
        <Button
            android:id="@+id/intro_slider_button"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="ENTER"
            android:background="@drawable/custom_button"
            android:layout_gravity="center"
            android:textColor="@color/colorBackground"
            android:textSize="14sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/splashscreen_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <com.lab.hexsa.flep.utility.FontQuicksandRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u00a9HexsaLab 2018"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/color1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/intro_slider_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/colorBackground"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.lab.hexsa.flep.utility.FontQuicksandRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\u00a9HexsaLab 2018"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/color1"/>
    </LinearLayout>
</RelativeLayout>